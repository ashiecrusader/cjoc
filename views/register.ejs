    <script lang="javascript">
 function vadilateSubm() {

    vadilateLink = document.getElementById("1").value.replace(/\s+/g, '');
    vadilateName = document.getElementById("2").value.replace(/\s+/g, '');
    vadilatewrit = document.getElementById("3").value.replace(/\s+/g, '');
    vadilateCle = document.getElementById("4").value.replace(/\s+/g, '');

    if(vadilateLink === "" || vadilateName === "" || vadilatewrit === "" || vadilateCle === "") {

        notifyError("User not registered; Please fill out all of the fields!")
        return
    }

    notifySuccess("Successfully registered user!")

    setTimeout(() => {
      
    document.getElementById("1").value = ""
    document.getElementById("2").value = ""
    document.getElementById("3").value = ""
    }, 1500);
    
}
    
     </script>
